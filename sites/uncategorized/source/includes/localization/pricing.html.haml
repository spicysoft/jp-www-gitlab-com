
.pricing-page
  .container.slp-container#intro
    .row.text-center.u-padding-top-md
      .font-size-2xl.u-margin-bottom-xxs #{current_page.data.plans_title}
      .font-size-xl #{current_page.data.plans_subtitle}

  %div.experiment-container.experiment-control
    .container.slp-container#plans
      .row.u-padding-top-sm.u-padding-bottom-sm
        - variant = 'control'
        %div.cmp-pricing-plan-list
          .row.pricing-nav-mobile
            -# empty div where the navigation will go once generated by javascript
          .row.plans
            %div{class: "col-md-4 plan plan-free"}
              .plan-inner-wrapper
                .content
                  .title #{current_page.data.plan_1_title}
                  .description #{current_page.data.plan_1_description}
                  .price $0
                  %a{ class: "btn cta-btn start-free", href: current_page.data.plan_1_href} #{current_page.data.plan_1_btn_copy}
                  - unless current_page.data.language_disclaimer == ""
                    .row.text-center.u-margin-top-xs
                      %em
                        * #{current_page.data.language_disclaimer}
            %div{class: "col-md-4 plan plan-silver-premium"}
              .plan-inner-wrapper
                .content
                  .title #{current_page.data.plan_2_title}
                  .description #{current_page.data.plan_2_description}
                  .price $19
                  .price-monthly #{current_page.data.plan_2_monthly}
                  -#.price-annually #{current_page.data.plan_2_annually}
                  %a{ class: "btn cta-btn start-silver-premium", href: current_page.data.plan_2_href} #{current_page.data.plan_2_btn_copy}
                  - unless current_page.data.language_disclaimer == ""
                    .row.text-center.u-margin-top-xs
                      %em
                        * #{current_page.data.language_disclaimer}
            %div{class: "col-md-4 plan plan-gold-ultimate"}
              .plan-inner-wrapper
                .content
                  .title #{current_page.data.plan_3_title}
                  .description #{current_page.data.plan_3_description}
                  .price $99
                  .price-monthly #{current_page.data.plan_3_monthly}
                  -#.price-annually #{current_page.data.plan_3_annually}
                  %a{ class: "btn cta-btn start-gold-ultimate", href: current_page.data.plan_3_href} #{current_page.data.plan_3_btn_copy}
                  - unless current_page.data.language_disclaimer == ""
                    .row.text-center.u-margin-top-xs
                      %em
                        * #{current_page.data.language_disclaimer}
