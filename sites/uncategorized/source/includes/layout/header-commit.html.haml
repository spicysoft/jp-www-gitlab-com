%link{:rel => :stylesheet, :type => :"text/css", :href => "/stylesheets/nav-event.css"}
%header.navbar#main-nav{role: "navigation"}
  .navbar-left
    = link_to "/", class: "navbar-brand animated" do
      = image_tag "/images/events/gitlab-commit/commit-logo-2020.svg", "style": "height: 36px;"
    - if current_page.data.header_primary_cta_text
      .mobile-cta-container
        - if current_page.data.event_register_url
          %a.btn.btn-nav-cta.btn-nav-link-cta{href: current_page.data.event_register_url}
            = current_page.data.header_primary_cta_text
        - else
          %a.btn.btn-nav-cta.btn-nav-link-cta{href: current_page.data.header_primary_cta_url}
            = current_page.data.header_primary_cta_text
  .navbar-right
    = partial "includes/layout/nav-event"


%script{ src: "/javascripts/libs/tweenmax.min.js", type: "text/javascript" }
